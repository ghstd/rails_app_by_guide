<article class="card mt-3">
  <section class="card-header">
    <%= question.user.name_or_email %>
  </section>

  <div class="card-body">
    <h4><%= question.title %></h2>

    <section class="card-text">
      <time datetime="<%= question.formatted_date %>">
        <small><%= question.formatted_date %></small>
      </time>

      <p class="my-2">
        <%= truncate(strip_tags(question.body), length: 100) %>
      </p>
    </section>

    <%= link_to 'Show', question_path(question), class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary' %>
    <%= link_to 'Destroy', question_path(question), class: 'btn btn-danger', data: {turbo_method: :delete} %>
  </div>
</article>