<% currently_at 'Questions' %>

<h1 class="mb-4"><%= @question.title %></h1>

<time datetime="<%= @question.formatted_date %>">
  <%= @question.formatted_date %>
</time>

<div class="lead my-3">
  <%= sanitize(@question.body) %>
</div>

<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger', data: {turbo_method: :delete} %>

<hr>

<h2>New Answer</h2>

<%= render 'answers/form' %>

<h2>Answers</h2>

<%= paginate @answers %>

<%= render partial: 'answers/answer', 
		collection: @answers, 
		as: :answer, 
		locals: {question: @question} %>

<%= paginate @answers %>
