<h1>Questions</h1>

<% @questions.each do |question| %>
  <h2><%= question.title %></h2>

  <time datetime="<%= question.formatted_date %>"><%= question.formatted_date %></time>

  <p><%= question.body %></p>
  <br/>
  <%= link_to 'Show', question_path(question) %> | 
  <%= link_to 'Edit', edit_question_path(question) %> | 
  <%= link_to 'Destroy', question_path(question), data: {turbo_method: :delete} %>
<% end %>
