<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
            <%= nav_tab(
							title: 'Home',
							url: root_path,
							options: {
							class: 'nav-link px-2',
							current_page: current_page
						}) %>
          </li>
          <li>
            <%= nav_tab(
							title: 'Questions',
							url: questions_path,
							options: {
							class: 'nav-link px-2',
							current_page: current_page
						}) %>
          </li>
        </ul>

        <ul class="nav col-12 col-lg-auto mb-2 mb-md-0">
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= nav_tab(
							title: current_user.name_or_email,
							url: '#',
							options: {
							class: 'nav-link px-2 text-white dropdown-toggle',
							data: {"bs-toggle": "dropdown"},
							current_page: current_page
							}) %>

              <ul class="dropdown-menu">
                <li>
                  <%= link_to 'Log Out', session_path,
										class: 'dropdown-item', data: {turbo_method: :delete} %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
              <%= nav_tab(
							title: 'Sign Up',
							url: new_user_path,
							options: {
							class: 'nav-link px-2',
							current_page: current_page
							}) %>
            </li>

            <li>
              <%= nav_tab(
							title: 'Log In',
							url: new_session_path,
							options: {
							class: 'nav-link px-2',
							current_page: current_page
							}) %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
<% end %>